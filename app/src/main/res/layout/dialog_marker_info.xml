<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_marker_info_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bg_dialog_custom">

    <TextView
        android:id="@+id/dialogTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Информация о метке"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:paddingBottom="16dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
      />

    <TextView
        android:id="@+id/markerTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Название: Окунь"
        android:textSize="16sp"
        android:textColor="#000000"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/markerSpeciesTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Вид рыбы: Окунь"
        android:textSize="16sp"
        android:textColor="#000000"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/markerMassTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Масса улова: 5-10кг"
        android:textSize="16sp"
        android:textColor="#000000"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/markerUsernameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавил: Иван Иванов"
        android:textSize="16sp"
        android:textColor="#000000"
        android:paddingBottom="16dp"/>

    <Button
        android:id="@+id/closeDialogButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Закрыть"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF8181"
        android:padding="12dp"/>
</LinearLayout>
