<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- Заливка фона (меняем на нужный вам цвет) -->
    <solid android:color="#E0F7FA" />

    <!-- Скруглённые углы -->
    <corners android:radius="16dp" />

    <!-- Встроенные отступы, чтобы "сжать" содержимое внутри -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp" />

</shape>
