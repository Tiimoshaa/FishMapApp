<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FishApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#4B4B4B</item>
        <item name="colorPrimaryVariant">#FFC9C9</item>
        <item name="colorOnPrimary">#FFE8E8</item>
        <item name="colorSecondary">#818181</item>
        <item name="colorSecondaryVariant">#C8C7C2</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

        <!-- Основная тема приложения (пример) -->
        <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
            <!-- ... -->
        </style>

        <!-- Кастомная тема AlertDialog -->
        <style name="CustomAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
            <!-- ВАЖНО: без android: префикса -->
            <item name="buttonBarPositiveButtonStyle">@style/MyPositiveButtonStyle</item>
            <item name="buttonBarNegativeButtonStyle">@style/MyNegativeButtonStyle</item>
        </style>

        <style name="MyPositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
            <item name="android:textColor">@android:color/holo_red_dark</item>
        </style>

        <style name="MyNegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
            <item name="android:textColor">@android:color/holo_blue_dark</item>
        </style>





    <style name="Theme.FishApp" parent="Base.Theme.FishApp" />
</resources>